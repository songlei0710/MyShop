<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.hzjxy.myshop.dao.UserTDao">
    <insert id="addUserT"></insert>
    <update id="updateUserTunpwd"></update>
    <update id="updateUserForMyInfo"></update>
    <update id="updateUserMember"></update>
    <update id="updateUserState"></update>
    <update id="updateUserPasswordProtection"></update>
    <update id="updateUserRoleByUserId"></update>
    <update id="updateUserHeadPathByUserId"></update>
    <update id="updateUserT"></update>
    <delete id="delUser"></delete>
    <select id="findByUserName" resultType="net.hzjxy.myshop.entity.UserT" parameterType="string">
        SELECT * FROM UserT WHERE username=#{username}
    </select>
    <select id="findById" resultType="net.hzjxy.myshop.entity.UserT" parameterType="string">
        SELECT  * FROM UserT WHERE UserId=#{userId}
    </select>
    <select id="findAllUserT" resultType="net.hzjxy.myshop.entity.UserT" parameterType="map">
        SELECT * FROM
          (
            SELECT A.*,ROWNUM RN FROM
              (
                  SELECT * FROM UserT ORDER BY createtime DESC
              ) A
              WHERE ROWNUM<=#{currentPage}*#{lineSize}
          )
          WHERE RN>=(#{currentPage}-1)*#{lineSize}+1
    </select>
    <select id="countFindAllUserT" resultType="java.lang.Integer"></select>
    <select id="checkUserByUsername" resultType="net.hzjxy.myshop.entity.UserT"></select>
    <select id="checkUsernameAndPassword" resultType="net.hzjxy.myshop.entity.UserT"></select>
    <select id="findUserByUserId" resultType="net.hzjxy.myshop.entity.UserT"></select>
    <select id="sortAllUserT" resultType="net.hzjxy.myshop.entity.UserT"></select>
    <select id="findEmailByUser"></select>
    <select id="checkUserByEmail" resultType="net.hzjxy.myshop.entity.UserT"></select>
    <select id="checkUserByAnswer" resultType="net.hzjxy.myshop.entity.UserT"></select>
    <select id="login" resultType="net.hzjxy.myshop.entity.UserT" parameterType="map">
        SELECT * FROM UserT WHERE username=#{username} AND password=#{password} AND state=#{userState}
    </select>
</mapper>