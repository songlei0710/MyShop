        SELECT COUNT (*) from GoodsAttribute
    </select>
    <select id="countSortAllGoodsAttribute" resultType="java.lang.Integer" parameterType="string">
        SELECT COUNT (*) FROM GoodsAttribute WHERE queryString=#{queryString}
    </select>
</mapper>